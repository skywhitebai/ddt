<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.ddt.dao.custom.CustomProductDevelopMapper" >
    <!--查询订单-->
    <resultMap id="listProductDevelopMap" type="com.sky.ddt.dto.productDevelop.response.ListProductDevelopResponse" extends="com.sky.ddt.dao.generate.ProductDevelopMapper.BaseResultMap">
        <result column="imgUrl" property="imgUrl"/>
        <result column="developer_user_name" property="developerUserName" />
    </resultMap>

    <select id="listProductDevelop" resultMap="listProductDevelopMap" parameterType="com.sky.ddt.dto.product.request.ProductListRequest" >
        select
        pd.*,
        (SELECT  MAX(img.`img_url`) FROM `img` WHERE img.`entity_id`=pd.`id` AND img.`img_type`='productDevelop.img') imgUrl,
        (select user_name from user where user.user_id=pd.developer_user_id) developer_user_name
        from product_develop pd
        <if test="_parameter != null">
            <include refid="product_develop_Query_Where_Clause" />
        </if>
        order by pd.create_time desc
    </select>
    <sql id="product_develop_Query_Where_Clause">
        <where >
            <trim prefix="(" suffix=")" prefixOverrides="and">
                <if test="productName != null and productName != ''">
                    and product_name like concat('%',#{productName},'%')
                </if>
                <if test="productCode != null and productCode != ''">
                    and product_code like concat('%',#{productCode},'%')
                </if>
                <if test="developUserId != null and developUserId != ''">
                    and develop_user_id #{developUserId}
                </if>
            </trim>
        </where>
    </sql>

</mapper>